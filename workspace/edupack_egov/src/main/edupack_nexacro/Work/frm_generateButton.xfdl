    <Objects>
      <Dataset id="ds00">
        <ColumnInfo>
          <Column id="ID" type="STRING" size="256"/>
          <Column id="TEXT" type="STRING" size="256"/>
          <Column id="FN_NAME" type="STRING" size="256"/>
          <Column id="GUBUN" type="STRING" size="256"/>
        </ColumnInfo>
        <Rows>
          <Row>
            <Col id="ID">btn1</Col>
            <Col id="TEXT">메일</Col>
            <Col id="FN_NAME">fn_goToMail</Col>
            <Col id="GUBUN">A</Col>
          </Row>
          <Row>
